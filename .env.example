# =========================================
#        CONFIGURACIÓN DE TELEGRAM
# =========================================
# Token de tu bot, obtenido de @BotFather
TELEGRAM_TOKEN="TU_TELEGRAM_TOKEN"

# ID del canal donde se enviarán las notificaciones. Debe empezar con -100.
TELEGRAM_CHANNEL_ID="TU_ID_DE_CANAL"

# URL pública de tu aplicación en Railway (ej: https://mi-bot-f1.up.railway.app)
# Railway la genera automáticamente cuando despliegas tu proyecto.
WEBHOOK_URL="URL_DE_TU_APP_EN_RAILWAY"


# =========================================
#      CONFIGURACIÓN DE LA APLICACIÓN
# =========================================
# URL de la API de donde se obtienen las carreras
API_URL="https://backend-vuelta-rapida-production.up.railway.app/api/races"

# Número de días hacia adelante para buscar carreras
API_DAYS_AHEAD=90

# Horas de antelación para la primera notificación de una sesión
NOTIFICATION_LEAD_HOURS=8

# Intervalo en horas para revisar si hay nuevas carreras
CHECK_INTERVAL_HOURS=4

# Categoría de la carrera a buscar en la API (ej: f1, f2, f3)
F1_CATEGORY_ID="f1"


# =========================================
#      CONFIGURACIÓN DE RAILWAY
# =========================================
# URL de conexión a tu base de datos PostgreSQL en Railway.
# Railway te la proporciona automáticamente en la sección "Connect" de tu servicio de base de datos.
DATABASE_URL="POSTGRESQL_URL_DE_RAILWAY"

# Puerto que Railway asigna a tu aplicación. No necesitas cambiarlo.
PORT=8080
